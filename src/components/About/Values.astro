---
import { Image } from "@astrojs/image/components";
import PlaneLeft from "../Landing/Shapes/PlaneLeft.astro";
import SingleValue from "./SingleValue.astro";
---

<section class="py-20 px-8 relative">
	<PlaneLeft
		class="absolute md:bottom-[-8%] md:left-[-3%] bottom-[-3%] left-[-3%] w-[14%] h-auto max-w-[195px] min-w-[100px] z-10"
	/>
	<div
		class="place-items-center absolute right-0 bottom-0 max-w-[40%] h-[508px] w-[620px] bg-green-100 rounded-tl-[200px] lg:grid hidden"
		style={{
			background:
				"radial-gradient(63.61% 76.06% at 50% 58.38%, rgba(255, 255, 255, 0.49) 12.5%, #E6F4EA 50%, #CEEAD6 79.69%)",
		}}
	>
		<Image
			src={import("./assets/planting.png") as any}
			format="webp"
			class="w-[60%]"
		/>
	</div>
	<div class="max-w-laptop mx-auto">
		<div class="space-y-2">
			<h3 class="text-rainbow text-md font-bold w-full">Our Values</h3>
			<h3 class="text-xl sm:text-[40px] font-bold">
				Weâ€™re built different, so we build different
			</h3>
			<p class="md:text-lg">
				This year, we are redefining what a developer is. This year, being a
				developer isn't limited to developing websites and apps with code. This
				year, GDSC-L is here to help people develop solutions, develop careers,
				develop communities, and develop relationships. We're doing this through
				three pillars.
			</p>
		</div>
		<div class="grid grid-cols-11">
			<div
				class="w-full col-span-full lg:col-span-6 xl:col-span-7 mt-14 space-y-14"
			>
				<SingleValue
					order="1"
					title="Googley Growth"
					description="We want to turn GDSC into a member-centric organization for anyone and everyone, regardless of background."
				/>

				<SingleValue
					order="2"
					title="Accessible Tech Education"
					description="We make it easy for anyone to level up in their tech journey by helping them building their skills and apply them to the real world."
				/>

				<SingleValue
					order="3"
					title="Amplified Community"
					description="We amplify who we are and what we do in using tech for good. We want to be visible and active in the community and partnering with others."
				/>
			</div>
		</div>
	</div>
</section>
