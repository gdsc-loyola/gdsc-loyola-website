---
export type Props = {
	fullWidth?: boolean;
	className?: string;
	href?: string;
};
const { fullWidth, className, href } = Astro.props as Props;
---

<a
	href={href}
	class={`text-gray-500 hover:text-blue-400 font-medium transition-colors cursor-pointer ${
		fullWidth && "w-full"
	} ${className}`}
>
	<slot />
</a>
