---
import { Image } from "@astrojs/image/components";

export type Props = {
	title: string;
	description: string;
	image: string;
	date: string;
};

const { ...props } = Astro.props;
const x = "https://source.unsplash.com/random/800x400";
---

<div class="bg-white rainbow-card mb-[5px] flex flex-col">
	<Image
		aspectRatio={2 / 1}
		src={x}
		width={400}
		height={200}
		format="webp"
		class="object-cover h-[50%] w-full grow basis-1/2"
	/>

	<div class="space-y-2 p-4 grow basis-1/2">
		<div class="flex justify-between items-center">
			<h3 class="text-md font-bold">
				{props.title}
			</h3>
			<div
				class:list={[
					"font-medium text-xs uppercase px-3 py-1 rounded-full tracking-widest bg-blue-100",
				]}
			>
				{props.date}
			</div>
		</div>
		<p class="text-gray-600">
			{props.description}
		</p>
	</div>
</div>
