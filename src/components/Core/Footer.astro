---
import { Image } from "@astrojs/image/components";
import GDSCLeftLogo from "../../icons/GDSCLeftLogo.astro";
import Logo from "../../icons/Logo.astro";
import Link from "../Link.astro";
---

<footer class="pt-24 pb-8 text-gray-700 px-8" id="footer">
	<div
		class="md:flex pb-16 gap-20 max-w-laptop mx-auto flex-wrap grid"
		style={{
			gridTemplateColumns: "repeat(auto-fit, minmax(200px, 1fr))",
		}}
	>
		<div
			class="flex gap-4 items-start col-span-1 sm:col-span-2 max-w-screen flex-col sm:flex-row"
		>
			<Logo class="w-12 h-auto mt-2" />
			<div class="whitespace-nowrap font-medium text-gray-500">
				<p>Google Developer Student Clubs</p>
				<p class="text-xs">Loyola</p>
			</div>
		</div>
		<div class="space-y-4">
			<h3 class="font-medium text-md">GDSC-L</h3>
			<Link class="text-sm block">Home</Link>
			<Link class="text-sm block">About</Link>
		</div>
		<div class="space-y-4">
			<h3 class="font-medium text-md">Projects</h3>
			<Link class="text-sm block">Events</Link>
			<Link class="text-sm block">Tech Products</Link>
		</div>

		<div class="space-y-4">
			<h3 class="font-medium text-md">Contact Us</h3>
			<p class="flex gap-2">
				<span class="text-sm font-medium text-gray-500"> Email:</span>
				<Link href="mailto:gdscloyola@gmail.com" class="text-sm block"
					>gdscloyola@gmail.com
				</Link>
			</p>
		</div>

		<div class="space-y-4">
			<h3 class="font-medium text-md">Social</h3>
			<div class="flex gap-7">
				<Link class="text-dark">
					<svg
						width="10"
						height="16"
						viewBox="0 0 10 16"
						xmlns="http://www.w3.org/2000/svg"
						class="fill-current"
					>
						<path
							d="M6.224 15.9998V8.71327H8.68216L9.04755 5.86037H6.224V4.0432C6.224 3.21995 6.45337 2.65631 7.63489 2.65631H9.13201V0.112796C8.4039 0.0345613 7.67134 -0.00277791 6.93878 -0.000110819C4.76599 -0.000110819 3.2742 1.32632 3.2742 3.76137V5.85504H0.832031V8.70793H3.27953V15.9998H6.224Z"
						></path>
					</svg>
				</Link>

				<Link class="text-dark">
					<svg
						width="17"
						height="16"
						viewBox="0 0 17 16"
						xmlns="http://www.w3.org/2000/svg"
						class="fill-current"
					>
						<path
							fill-rule="evenodd"
							clip-rule="evenodd"
							d="M12.1321 -0.000244141H4.13208C1.93228 -0.000244141 0.13208 1.79916 0.13208 3.99976V11.9998C0.13208 14.1996 1.93228 15.9998 4.13208 15.9998H12.1321C14.3319 15.9998 16.1321 14.1996 16.1321 11.9998V3.99976C16.1321 1.79916 14.3319 -0.000244141 12.1321 -0.000244141ZM8.13215 11.333C6.29095 11.333 4.79875 9.84022 4.79875 7.99982C4.79875 6.15862 6.29095 4.66642 8.13215 4.66642C9.97255 4.66642 11.4655 6.15862 11.4655 7.99982C11.4655 9.84022 9.97255 11.333 8.13215 11.333ZM11.4654 3.66642C11.4654 4.21862 11.9126 4.66642 12.4654 4.66642C13.0182 4.66642 13.4654 4.21862 13.4654 3.66642C13.4654 3.11422 13.0182 2.66642 12.4654 2.66642C11.9126 2.66642 11.4654 3.11422 11.4654 3.66642Z"
						></path>
					</svg>
				</Link>
				<Link class="text-dark">
					<svg
						width="20"
						height="16"
						viewBox="0 0 20 16"
						xmlns="http://www.w3.org/2000/svg"
						class="fill-current"
					>
						<path
